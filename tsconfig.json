{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "./dist",
		"rootDir": ".",
		"declaration": true,
		"declarationDir": "./dist",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "dist"] 
}